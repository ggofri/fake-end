{
  "name": "fake-end",
  "publishConfig": {
    "access": "public"
  },
  "version": "1.1.0",
  "description": "A modern TypeScript CLI tool for mocking backend APIs using YAML files",
  "main": "dist/index.js",
  "bin": {
    "fake-end": "./bin.js"
  },
  "scripts": {
    "dev": "tsx src/cli/index.ts",
    "start": "bun bin.js",
    "build": "rm -rf dist && bun run tsc",
    "tsc": "tsc && tsc --project tsconfig.test.json",
    "lint": "eslint --ext .ts",
    "lint:fix": "eslint --ext .ts --fix",
    "test": "bun test:unit && bun test:e2e",
    "test:unit": "jest --testPathIgnorePatterns=tests/e2e/ --no-cache --testTimeout=10000",
    "test:unit:verbose": "bun test:unit --verbose",
    "test:unit:coverage": "bun test:unit --coverage && bun scripts/update-coverage-threshold.mjs",
    "test:e2e": "jest tests/e2e/",
    "test:e2e:verbose": "jest tests/e2e/ --verbose",
    "test:e2e:coverage": "jest tests/e2e/ --coverage",
    "test:e2e:run": "./tests/run-e2e.sh",
    "test:cleanup": "bun scripts/cleanup-tests.mjs",
    "compile": "bun run build && bun build --compile ./dist/src/index.js --outfile fake-end",
    "pack": "bun run compile && bun pm pack ./fake-end --filename ./dist/fake-end.tgz",
    "prepare": "husky",
    "prepublishOnly": "bun run pack",
    "verify": "bun run tsc && bun run lint && bun run test",
    "publish": "bun run prepublishOnly && bun publish --access public ./dist/fake-end.tgz"
  },
  "keywords": [
    "cli",
    "mock",
    "api",
    "yaml",
    "typescript",
    "development",
    "server"
  ],
  "author": "Julian Ramirez",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "eslint-plugin-ban-comments": "^1.0.0",
    "express": "^4.18.2",
    "glob": "^10.3.10",
    "js-yaml": "^4.1.0",
    "ts-morph": "^21.0.1",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.0",
    "@jest/globals": "^30.0.5",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^9.30.0",
    "eslint-plugin-unused-imports": "^4.0.0",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "jest-silent-reporter": "^0.6.0",
    "ts-jest": "^29.4.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.35.0"
  }
}
