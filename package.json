{
  "name": "fake-end",
  "publishConfig": {
    "access": "public"
  },
  "version": "1.1.0",
  "description": "A modern TypeScript CLI tool for mocking backend APIs using YAML files",
  "main": "dist/index.js",
  "bin": {
    "fake-end": "./bin.js"
  },
  "scripts": {
    "build": "rm -rf dist && tsc",
    "dev": "tsx src/cli/index.ts --watch",
    "start": "bun bin.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "jest",
    "compile": "bun run build && bun build --compile ./dist/src/index.js --outfile fake-end",
    "pack": "bun run compile && bun pm pack ./fake-end --filename ./dist/fake-end.tgz",
    "prepublishOnly": "bun run pack",
    "publish": "bun run prepublishOnly && bun publish --access public ./dist/fake-end.tgz"
  },
  "keywords": [
    "cli",
    "mock",
    "api",
    "yaml",
    "typescript",
    "development",
    "server"
  ],
  "author": "Julian Ramirez",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "express": "^4.18.2",
    "glob": "^10.3.10",
    "js-yaml": "^4.1.0",
    "ts-morph": "^21.0.1",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.0",
    "@types/express": "^4.17.21",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^9.30.0",
    "eslint-plugin-unused-imports": "^4.0.0",
    "globals": "^16.2.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.35.0"
  }
}
